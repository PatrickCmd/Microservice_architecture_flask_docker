{
    "openapi": "3.0.2",
    "info": {
        "version": "0.0.1",
        "title": "Users Service",
        "description": "Swagger spec for documenting the users service"
    },
    "servers": [
        {
            "url": "http://microservice-staging-alb-1296537651.us-east-2.elb.amazonaws.com"
        }
    ],
    "tags": [
        {
            "name": "user",
            "description": "Operations about user"
        }
    ],
    "paths": {
        "/users/ping": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "Just a sanity check",
                "responses": {
                    "200": {
                        "description": "Will return 'pong!'"
                    }
                }
            }
        },
        "/users": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "Return all users",
                "responses": {
                    "200": {
                        "description": "user object"
                    }
                }
            },
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Add a new user",
                "requestBody": {
                    "description": "User to add",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/user-full"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User added"
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "Returns a user based on a single user ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of user to fetch",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "user object"
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Creates a new user",
                "requestBody": {
                    "description": "User to add",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "username",
                                    "email",
                                    "password"
                                ],
                                "$ref": "#/components/schemas/user-full"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "user object"
                    },
                    "400": {
                        "description": "That user already exists / Invalid payload",
                        "content": {}
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Logs a user in",
                "requestBody": {
                    "description": "User to log in",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/user"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfully logged in"
                    },
                    "400": {
                        "description": "Invalid payload.",
                        "content": {}
                    },
                    "404": {
                        "description": "User does not exist.",
                        "content": {}
                    },
                    "500": {
                        "description": "Invalid payload.",
                        "content": {}
                    }
                }
            }
        },
        "/auth/status": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "Return the logged in user's status",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User object"
                    }
                }
            }
        },
        "/auth/logout": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "Logs a user out",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully logged out"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        },
        "schemas": {
            "user": {
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "user-full": {
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            }
        }
    }
}